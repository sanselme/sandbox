{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      1,
      "always",
      150
    ],
    "subject-case": [
      1,
      "always",
      "sentence-case"
    ],
    "type-enum": [
      1,
      "always",
      [
        "build",
        "chore",
        "ci",
        "deployment",
        "devcontainer",
        "docs",
        "feature",
        "fix",
        "issue",
        "networking",
        "refactor",
        "revert",
        "security",
        "site",
        "test",
        "workspace"
      ]
    ]
  }
}
